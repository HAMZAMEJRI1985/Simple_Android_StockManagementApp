<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/accueil"
    >

    <ProgressBar
        android:id="@+id/pBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="234dp"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="145dp"
        android:indeterminateTint="@color/colorPink"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/login"
        android:layout_marginStart="-33dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/alex_brush"
        android:text="@string/passwd"
        android:textColor="@android:color/white"
        android:textSize="60px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cx"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="74dp"
        android:fontFamily="@font/alex_brush"
        android:text="@string/log"
        android:textColor="@android:color/white"
        android:textSize="60px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/radiuscorners"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="mejrihamzaemail@gmail.com"
        android:textColor="@android:color/black"
        android:textSize="40px" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/radiuscorners"
        android:ems="10"
        android:inputType="textPassword"
        android:text="12345678"
        android:textColor="@android:color/black"
        android:textSize="40px" />

    <Button
        android:id="@+id/cx"
        android:layout_width="250dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="474dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/login_button_cornners_radius"
        android:fontFamily="@font/aladin"
        android:text="@string/con"
        android:textColor="@android:color/white"
        android:textSize="55px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/insc"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="513dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/login_button_cornners_radius"
        android:fontFamily="@font/aladin"
        android:text="@string/ins"
        android:textColor="@android:color/white"
        android:textSize="55px"
        android:textStyle="bold" />
</RelativeLayout>