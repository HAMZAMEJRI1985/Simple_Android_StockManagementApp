<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/accueil"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/login"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/akronim"
        android:text="@string/passwd"
        android:textColor="@android:color/white"
        android:textSize="60px"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cx"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="74dp"
        android:fontFamily="@font/akronim"
        android:text="@string/log"
        android:textColor="@android:color/white"
        android:textSize="60px"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="390dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radiuscorners"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="mejrihamzaemail@gmail.com"
        android:textColor="@android:color/black"
        android:textSize="50px" />/>

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="431dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radiuscorners"
        android:ems="10"
        android:inputType="textPassword"
        android:text="1234"
        android:textColor="@android:color/black"
        android:textSize="50px" />

    <Button
        android:id="@+id/cx"
        android:layout_width="250dp"
        android:layout_height="29dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="474dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttoncorners"
        android:fontFamily="@font/akronim"
        android:text="@string/con"
        android:textColor="@android:color/white"
        android:textSize="55px"
        android:textStyle="bold" />

    <Button
        android:id="@+id/insc"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="513dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/buttoncorners"
        android:fontFamily="@font/akronim"
        android:text="@string/ins"
        android:textColor="@android:color/white"
        android:textSize="55px"
        android:textStyle="bold" />
</RelativeLayout>